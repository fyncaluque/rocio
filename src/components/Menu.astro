---
const baseUrl = import.meta.env.BASE_URL;
const isHomePage = Astro.url.pathname === `${baseUrl}/`;
const isAboutPage = Astro.url.pathname === `${baseUrl}/about`;
const isExperiencePage = Astro.url.pathname === `${baseUrl}/experience`;
const isPublicationsPage = Astro.url.pathname === `${baseUrl}/publications`;
const isRecognitionsPage = Astro.url.pathname === `${baseUrl}/recognitions`;
const isContactPage = Astro.url.pathname === `${baseUrl}/contact`;

title: "Rocío Marivel Díaz Zavala";
date: "2023-11-05";
author: "Rocío Marivel Díaz Zavala";
---

<header class="sticky z-20 mt-3">
  <nav>
    <div class="flex flex-wrap items-center justify-between">
      <span
        class="self-center text-2xl font-light whitespace-nowrap ml-5 sm:ml-0 my-1"
        >Rocío Díaz</span
      >

      <button
        transition:persist
        data-collapse-toggle="mobile-menu"
        type="button"
        class="lg:hidden mr-5 sm:mr-0 text-gray-400 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-300 rounded-lg inline-flex items-center justify-center"
        aria-controls="mobile-menu-2"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-6 h-6"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill-rule="evenodd"
            d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
            clip-rule="evenodd"></path></svg
        >
        <svg
          class="hidden w-6 h-6"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill-rule="evenodd"
            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
            clip-rule="evenodd"></path></svg
        >
      </button>
      <div
        class="hidden lg:block w-full lg:w-auto bg-gray-100 lg:bg-transparent"
        id="mobile-menu"
      >
        <nav id="my-menu" class="menu">
          <ul
            class="flex flex-col gap-x-1 lg:flex-row md:mt-0 md:text-base md:font-normal"
          >
            <li class="flex text-center">
              <a class:list={["py-2 px-4"]} href=`${baseUrl}/`>Inicio</a>
            </li>
            <li class="flex text-center">
              <a
                class:list={["py-2 px-4", { "link-active": isAboutPage }]}
                href=`${baseUrl}/about`>Acerca</a
              >
            </li>
            <li class="flex text-center">
              <a
                class:list={["py-2 px-6", { "link-active": isExperiencePage }]}
                href=`${baseUrl}/experience`>Experiencia</a
              >
            </li>
            <li class="flex text-center">
              <a
                class:list={[
                  "py-2 px-6",
                  { "link-active": isPublicationsPage },
                ]}
                href=`${baseUrl}/publications`>Publicaciones</a
              >
            </li>

            <li class="flex text-center">
              <a
                class:list={[
                  "py-2 px-6",
                  { "link-active": isRecognitionsPage },
                ]}
                href=`${baseUrl}/recognitions`>Reconocimientos</a
              >
            </li>
            <li class="flex text-center">
              <a class:list={["py-2 px-6"]} href=`${baseUrl}/contact`
                >Contacto</a
              >
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </nav>
</header>

<script
  src="https://unpkg.com/@themesberg/flowbite@1.1.1/dist/flowbite.bundle.js"
></script>
<script>
  console.log("¡Bienvenida, consola del navegador!");
</script>

<style>
  li {
    min-width: 120px;
  }
  a {
    width: 100%;
    color: #525252;
    font-weight: 400;
    border-radius: 3px;
    box-shadow: inset 0 0 0 0 #4003d0;
    transition:
      color 0.7s ease-in-out,
      box-shadow 0.7s ease-in-out;
  }

  a:hover {
    color: #fff;
    box-shadow: inset 200px 0 0 0 #4003d0;
  }

  .link-active {
    color: #fff;
    background: rgb(51, 0, 208);
    background: linear-gradient(
      90deg,
      rgba(51, 0, 208, 1) 0%,
      rgba(105, 16, 208, 1) 50%,
      rgba(188, 12, 240, 1) 100%
    );
  }
</style>
