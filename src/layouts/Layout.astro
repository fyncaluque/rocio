---
import { ViewTransitions } from "astro:transitions";
import Menu from "../components/Menu.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/RocioDiazZavala/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <!-- /Bootstrap Icons -->
    <ViewTransitions />
  </head>
  <body>
    <div class="layout">
      <header class="header">
        <Menu />
      </header>
      <div class="leftSide"></div>
      <main class="body bg-neutral-100">
        <div class="flex h-full">
          <img
            src=`${baseUrl}/image/profile.png`
            alt=""
            class="w-4/12 hidden xl:block"
          />
          <div
            class="w-full pt-5 px-5 md:px-10 overflow-y-auto contenedor"
            transition:animate="fade"
          >
            <slot />
          </div>
        </div>
      </main>
      <div class="rightSide"></div>
      <footer class="footer">
        <Footer />
      </footer>
    </div>
    <div class="trail hidden"></div>
    <!-- Scripts -->

    <script>
      document.addEventListener("mousemove", function (event) {
        const trail = document.createElement("div");
        trail.className = "trail";
        document.body.appendChild(trail);
        trail.style.left = event.pageX - 5 + "px";
        trail.style.top = event.pageY - 5 + "px";
        setTimeout(() => {
          trail.remove();
        }, 1000);
      });
    </script>

    <script is:inline src="../scripts/main.js"></script>

    <style is:global>
      :root {
      }
      .activo {
        font-weight: 900;
      }

      html {
        font-family: system-ui, sans-serif;
        /* color-scheme: light; */
      }

      body {
        padding: 0;
        margin: 0;
        overflow: hidden;
      }
      .layout {
        width: 100%;
        height: 100vh;

        display: grid;
        grid:
          "leftSide header rightSide" 70px
          "leftSide body rightSide" 1fr
          "leftSide footer rightSide" 60px
          / 60px 1fr 60px;
      }

      .header {
        grid-area: header;
      }

      .leftSide {
        grid-area: leftSide;
      }

      .body {
        grid-area: body;
        border-radius: 10px;
        overflow: auto;
      }

      .rightSide {
        grid-area: rightSide;
      }

      .footer {
        grid-area: footer;
      }

      @media (max-width: 640px) {
        .layout {
          width: 100%;
          height: 100vh;

          display: grid;
          grid:
            "header header header" 70px
            "body body body" 1fr
            "footer footer footer" 60px
            / 50px 1fr 50px;
        }
      }

      .contenedor::-webkit-scrollbar {
        width: 8px;
      }

      .contenedor::-webkit-scrollbar-thumb {
        background-color: #e5e5e5;
        border-radius: 5px;
      }

      .line {
        background: rgb(51, 0, 208);
        background: linear-gradient(
          90deg,
          rgba(51, 0, 208, 1) 0%,
          rgba(105, 16, 208, 1) 50%,
          rgba(188, 12, 240, 1) 100%
        );
      }

      .trail {
        position: absolute;
        width: 10px;
        height: 10px;
        background-color: #3701d0;
        pointer-events: none;
        transform-origin: center;
        animation: trail 0.5s ease-out;
        opacity: 0;
      }

      @keyframes trail {
        0% {
          transform: scale(1);
          opacity: 1;
        }
        100% {
          transform: scale(0);
          opacity: 0;
        }
      }
    </style>
  </body>
</html>
