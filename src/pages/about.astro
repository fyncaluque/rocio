---
import Script from "../components/Script.astro";
import Layout from "../layouts/Layout.astro";

title: "Acerca";
date: "2023-11-05";
author: "Rocío Marivel Díaz Zavala";

const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="Acerca">
  <section>
    <!-- Title -->
    <div class="flex items-center my-8">
      <h1 class="text-3xl tracking-widest font-extrabold text-dark-grey-900">
        ACERCA
      </h1>
      <div class="h-0.5 w-full ml-8 bg-violet-300"></div>
    </div>
    <!-- /Title -->

    <article class="grid md:grid-cols-2">
      <section>
        <h3 class="font-bold text-lg">Título Profesional:</h3>
        <p class="mb-5">Licenciada en Ciencias de la Educación</p>

        <h3 class="font-bold text-lg">Especialidad:</h3>
        <p class="mb-5">Lengua, Literatura, Filosofía y Psicología</p>

        <h3 class="font-bold text-lg">Mayor Grado Académico:</h3>
        <p class="mb-5">Doctor en Administración</p>

        <h3 class="font-bold text-lg">Nivel:</h3>
        <p class="mb-5">Docente Nombrada Categoría Auxiliar</p>

        <h3 class="font-bold text-lg">Colegiatura:</h3>
        <p class="mb-5">CPP 0729696833</p>
      </section>
      <section>
        <h3 class="font-bold text-lg">Educación:</h3>
        <ol class="list-disc ml-8 mb-5">
          <li>
            Maestro en Investigación y Docencia en educación Superior UNCV 2014
          </li>
          <li>Doctor en Administración UAP Filial Arequipa 2014</li>
        </ol>
        <h3 class="font-bold text-lg">Registro de Investigadora:</h3>
        <ol class="list-disc ml-8 mb-10">
          <li>Scopus Author Identifier: 57218659974</li>
          <li>
            Docente calificada como Investigadora RENACYT y reconocida por la
            UNSA
          </li>
        </ol>
        <article class="flex gap-x-8 items-start ml-8">
          <a
            href="https://orcid.org/0000-0003-3745-528X"
            title="Indice H:2"
            target="_blank"
            ><img src=`${baseUrl}/image/orcid.png` alt="" class="h-5" /></a
          >
          <a
            href="https://scholar.google.es/citations?user=1Bj6RLAAAAAJ&hl=es"
            title="Indice H:2"
            target="_blank"
            ><img
              src=`${baseUrl}/image/google-scholar.png`
              alt=""
              class="h-7"
            /></a
          >
          <a
            href="https://dialnet.unirioja.es/servlet/articulo?codigo=8228863"
            title="Indice H:2"
            target="_blank"
            ><img src=`${baseUrl}/image/dialnet.png` alt="" class="h-5" /></a
          >
        </article>
      </section>
    </article>
  </section>
</Layout>
